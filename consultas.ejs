<body>
    <div class="container">
        <center>
            <img src="https://github.com/bgaby7/medicalg/blob/main/consultas/foto2.png?raw=true" class="float-start"
                width="550px" height="550px">
            <div class="mt-4 p-5 bg-primary bg-light text-info rounded form">
                <form action="/add" method="POST">
                    <div class="form-header">
                        <div class="title">
                            <h1>CONSULTA:</h1>
                        </div>
                    </div>
                    <br>
                    <div class="input-box">
                        <label for="Nome">Nome:</label>
                        <input type="text" name="Nome" placeholder="Name" required class="form-control">
                    </div>
                    <div class="input-box">
                        <label for="medico">Médico:</label>
                        <input type="text" name="Medico" placeholder="Medico" required class="form-control">
                    </div>
                    <div class="input-box">
                        <label for="especialidade">Especialidade:</label>
                        <input type="text" name="Especialidade" placeholder="Especialidade" required
                            class="form-control">
                    </div>
                    <div class="input-box">
                        <label for="txtData">Data:</label>
                        <input type="date" name="Data" placeholder="Data" required>
                    </div>
                    <div class="input-box">
                        <label for="txtHora">Hora:</label>
                        <input type="time" name="Hora" placeholder="Hora" required>
                    </div>
                    <button class="btn btn-outline-info" type="submit">Finalizar</button>

                </form>
            </div>
        </center>
    </div>
</body>

<!-- Users List -->
<div class="mt-4 p-5 bg-primary bg-light text-black">

    <h2>CONSULTAS</h2>
    <ul>
        <% consultas.forEach(consultas=> { %>
            <p>
                <strong>
                    <%= consultas.Nome %>
                </strong> (<%= consultas.Medico %>) (<%= consultas.Hora %>) (<%= consultas.Data %>)
                            <a href="/deleteConsulta/<%= consultas.id %>">Cancelar</a>
            </p>
            <% }); %>
    </ul>
</div>
